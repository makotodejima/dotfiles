{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(git show:*)",
      "mcp__ide__getDiagnostics",
      "Bash(npm run type-check:*)",
      "Bash(npm run lint:*)"
    ],
    "deny": []
  },
  "model": "opus",
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/context-bar.sh"
  }
}
