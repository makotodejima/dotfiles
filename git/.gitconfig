[alias]
	wip = commit -m 'wip' --no-verify
[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
[user]
	name = Makoto Dejima
	email = makoto@legalos.io
	signingkey = /Users/makotodejima/.ssh/id_ed25519.pub
[delta]
        line-numbers = true
[pull]
	rebase = false
[push]
	autoSetupRemote = true
[commit]
	gpgsign = true
[rebase]
	updateRefs = false
[gpg]
	format = ssh
[init]
	defaultBranch = main
